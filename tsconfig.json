{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "noImplicitAny": false,
        "noImplicitThis": false,
        "sourceMap": true,
        "rootDir": "./",
        "outDir": "dist",
        "watch": false,
        "esModuleInterop": true,
        "skipDefaultLibCheck": true,
        "allowJs": true,
        "baseUrl": "./",
        "paths": {}
    },
    "include": ["./lib/**/*", "test/*"],
    "exclude": ["node_modules/**/*"]
}